<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/transparent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/lay1"
    android:layout_width="match_parent"
    android:layout_height="131sp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="13dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="3"
        android:layout_height="match_parent">
        <com.zhongkebochuang.blasthelper.uitils.CircleImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="25sp"
            android:src="@drawable/aaa"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="43sp"
            android:text="希尔瓦娜斯"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:layout_marginTop="45sp"
            android:src="@mipmap/jiantou"
            />
    </LinearLayout>


</LinearLayout>
<LinearLayout
    android:layout_marginTop="11dp"
    android:layout_width="match_parent"
    android:layout_height="2px"
    android:layout_above="@id/lay1">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cccccc"
        />
</LinearLayout>
<LinearLayout
    android:id="@+id/div_tab_bar"
    android:layout_width="match_parent"
    android:layout_height="2px"
    android:layout_below="@id/lay1">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cccccc"
        />
</LinearLayout>

<LinearLayout
    android:id="@+id/lay3"
    android:layout_marginTop="30sp"
    android:layout_width="match_parent"
    android:layout_below="@id/div_tab_bar"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_height="50sp">

    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="3"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wode_dongtai"
            android:paddingTop="10sp"
            android:paddingLeft="10sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="18sp"
            android:text="我的动态"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="70sp" />
    </LinearLayout>




</LinearLayout>
<LinearLayout
    android:id="@+id/lay4"
    android:layout_width="match_parent"
    android:layout_below="@id/lay3"
    android:layout_marginTop="15sp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_height="50sp">
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="3"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wode_jingyan"
            android:paddingTop="10sp"
            android:paddingLeft="7sp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14sp"
            android:layout_marginTop="15sp"
            android:text="我的经验"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="70sp"
            />
    </LinearLayout>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_below="@id/lay4">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red"
            />
    </LinearLayout>

<LinearLayout
    android:id="@+id/lay5"
    android:layout_width="match_parent"
    android:layout_below="@id/lay4"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_height="50sp">
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="3"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wode_yue"
            android:paddingTop="10sp"
            android:paddingLeft="10sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="20sp"
            android:text="我的余额"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="70sp"
            />
    </LinearLayout>



</LinearLayout>

<LinearLayout
    android:id="@+id/lay6"
    android:layout_marginTop="15sp"
    android:layout_width="match_parent"
    android:layout_below="@id/lay5"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_height="50sp">
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="3"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wode_dianping"
            android:paddingTop="10sp"
            android:paddingLeft="10sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="17sp"
            android:text="我的点评"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="70sp"
            />
    </LinearLayout>


</LinearLayout>
<LinearLayout
    android:id="@+id/lay7"
    android:layout_width="match_parent"
    android:layout_below="@id/lay6"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_height="50sp">
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="3"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wode_zan"
            android:paddingTop="10sp"
            android:paddingLeft="10sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="18sp"
            android:text="我的赞"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="70sp"
            />
    </LinearLayout>



</LinearLayout>
<LinearLayout
    android:id="@+id/lay8"
    android:layout_marginTop="30sp"
    android:layout_width="match_parent"
    android:layout_below="@id/lay7"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_height="50sp">
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="3"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wode_finish"
            android:paddingTop="10sp"
            android:paddingLeft="10sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="15sp"
            android:text="退出登录"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="70sp"
            />
    </LinearLayout>




</LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>